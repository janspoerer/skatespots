<div class="container">
  <div class="col-md-9">
    <div class="profile-body">
      <%# FORM FOR UPDATING PROFILE  %>
      <%= simple_form_for @user, url: profile_path(@user), html: { method: :patch } do |f| %>
        <%= f.error_notification %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <p class="small">Your public profile only shows your first name.</p>

        <%#= f.input :city %>
        <%= f.input :city_id, collection: City.all, include_blank: "- Please select one -" %>
        <%= f.input :email %>
        <p class="small">We wonâ€™t share your private email address with other Skaters.</p>
        <%= f.input :password, placeholder:"********" %>
        <%= f.input :facebook %>
        <%= f.input :twitter %>
        <%= f.input :instagram %>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.submit 'Save', class: "btn btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
