<%= simple_form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :event_date %>
    <%= f.text_field :event_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.text_field :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.text_field :end_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :status, :collection => [['Coming soon', '1'], ['Ongoing', '2']], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :spot_id, collection: Spot.all, include_blank: "- Please select one -" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
