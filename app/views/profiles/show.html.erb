<div class="user-profile">

  <div class="user-cover-photo">
    <!-- <img align="left" class="user-cover-photo" src="https://www.wallpaperup.com/uploads/wallpapers/2014/03/29/313721/acd564acb7e9aacb1daa22acc7b42685.jpg" class="img-responsive" alt="Profile image"/> -->
  </div>

  <div class="user-container">
    <div class="row">

      <div class="col-md-3">
        <div class="user-details-box" style="border-bottom: solid 1px rgb(220, 224, 223)">
          <div class="user-image">
            <%= cl_image_tag @user.photo.url, crop: :fill, class:"user-image-profile"%>
          </div>
          <div class="user-info">
            <br>
            <div class="user-profile-text">
              <p><strong>About:</strong> Just a simple gal who loves skating</p>
              <p><strong>Member since: </strong><%= @user.created_at.strftime("%Y") %></p><br><br>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="user-body">
          <h2><strong><%= @user.first_name %></strong></h2>
          <p><i class="fas fa-home"></i> Lives in <%= @user.city&.name&.capitalize %></p>
        </div>
        <h3 style="margin: 20px; padding-top: 10px; text-shadow: 1px 1px 0px rgba(0,0,0,0.2); color: rgb(116, 107, 119) "><strong>Check out my skatespot playland</strong></h3>

        <div class="user-favorites">
          <%= render 'favorites' %>
        </div>
      </div>

      <div class="col-md-1">
        <div class="user-social-media text-center">
          <a href="<%= @user.facebook %>"><i class="fab fa-facebook"></i></a>
        </div>
        <div class="user-social-media text-center">
          <a href="<%= @user.twitter %>"><i class="fab fa-twitter"></i></a>
        </div>
        <div class="user-social-media text-center">
          <a href="<%= @user.instagram %>"><i class="fab fa-instagram"></i></a>
        </div>
      </div>

    </div>
  </div>

</div> <!-- end of user-container -->
