<h2>
  <%= pluralize @spot.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @spot.reviews.blank? %>
    Leave a review for <%= @spot.name %>
  <% else %>
    <% @spot.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>

<%= render 'reviews/form', spots: @spot, review: @review %>
