<!-- Review header -->
<div class="listing-title">
    <% #if @spot.reviews.present? %>
      <h4><strong><%#="PLACEHOLER" @spot.reviews.count %> Reviews</strong></h4>
    <% #else %>
      <h4><strong>Reviews</strong></h4>
    <% #end %>
</div>

<!-- Review content -->
<div class="review-box" style="border-bottom: solid 1px rgb(220, 224, 223)">
  <% if #@spot.reviews.present? %>
  <ul>
    <% #@spot.reviews.each do |review| %>
        <img src=@user.photo alt="" width="40" class="img-circle">
      <li>
        <% if #review.user.first_name.blank?  %>
          <p><strong>Anonymous</strong></p>
        <% else %>
          <p><strong><%= "PLACEHOLDER" #review.user.first_name %></strong></p>
        <% end %>
        <p>Comment: <%= "PLACEHOLDER" #review.comment %></p>
        <p>Post on: <%= "PLACEHOLDER" #review.created_at.strftime("%Y-%m-%d") %></p>

        <div class="d-flex">
          <% #(1..5).to_a.each do |el| %>
            <% #if el <= review.rating %>
              <i class="fas fa-star" style="color: #ffb400;"></i>
            <% else %>
              <i class="fas fa-star" style="color: #ccc"></i>
            <% #end %>
          <% #end %>
          <%= "LINK PLACEHOLDER" #link_to "Delete review", review_path(review), method: "delete", data: { confirm: 'Are you sure?' }  %>
        </div>
      <% end %>
      <% else %>
      <p>There is no review for this spot yet</p>
      <% end %>
    </li>
  </ul>

</div><br>

<%= render 'reviews/form' %>
