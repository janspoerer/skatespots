<div class="spot-title">

  <div class="row">
    <div class="col-md-9">
      <h4><strong><%= @spot.name %></strong></h4>
    </div>

    <div class="col-md-3">
      <div class="main-card-image-uploadedby-favorites">
        <div class="main-card-image-favorites">
          <% if user_signed_in? %>
            <p class="small btn"><%= link_to "<i class='fas fa-thumbs-up'></i>".html_safe, upvote_like_path(@spot.id) %> </p>
            <p class="small btn"><%= link_to "<i class='fas fa-thumbs-down'></i>".html_safe, downvote_like_path(@spot.id) %></p>
            <br><br>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex">
    <% if spot.reviews&.blank? %>
      <p class="small">0 <i class="fas fa-star" style="color: #ccc"> </i></p>
    <% else %>
        <% @spot.average_rating %><i class="fas fa-star" style="color: #ffb400;"></i>
    <% end %>
    <p class="small"> | <%= pluralize(@number_of_likes, "")%> <i class="far fa-heart"></i></p>
  </div>

  <p><%= @spot.address %> <%= @spot.city %></p>
</div>

<div class="spot-details" style="border-bottom: solid 1px rgb(190, 189, 186); padding-top: 5px">
  <p><strong>Description: </strong><%= @spot.description %></p>
</div>
