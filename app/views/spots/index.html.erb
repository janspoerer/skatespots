<div style="display: flex">
  <div style="flex-basis: 40vw; position: sticky; top: 90px; height: calc(100vh - 90px)">
    <!-- Map__inner card bg-map  -->
    <div id="map"
      style="width: 100%;"
      data-markers="<%= @markers.to_json %>">
    </div>
  </div>
  <div class="container-fluid">
    <h2><strong>Explore and find your favorite skatespots (<%= @spots&.count %>)</strong></h2>
    <br>
      <div class="row">
        <% @spots&.each do |spot|  %>
          <div class="col-sm-12 col-md-4 grid-item">
            <%= render 'shared/card', spot: spot %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

