<div id="myCarousel" class="carousel slide carousel-fade" style="display: flex; justify-content: center;">
  <!-- To make photos sliding automatically, add data-ride to the div above: data-ride="carousel"  -->

  <% if @spot.photos.present? %>
    <div id="myCarousel" class="carousel slide">
      <ol class="carousel-indicators">
        <% (0..@spot.photos.length - 1).to_a.each do |index| %>
          <li data-target="#myCarousel" data-slide-to="<%= index %>"
               class="<%= 'active' if index == 0 %>" ></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @spot.photos.each_with_index do |photo, index| %>
          <div class="item <%= 'active' if index == 0 %>">
            <%= cl_image_tag photo.url %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span><i class="glyphicon glyphicon-chevron-left fas fa-chevron-left"></i></span>
      <span class="sr-only">Previous</span></a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span><i class=" glyphicon glyphicon-chevron-right fas fa-chevron-right"></i></span>
      <span class="sr-only">Next</span></a>

    <% else %>
      <div class="text-center" style="padding: 40px; align-item: center">
        <p>No photo available</p><br>
        <p class="small">Would you like to be the first one to add photos to this skate spot?</p>
      </div>
    <% end %>

</div>
