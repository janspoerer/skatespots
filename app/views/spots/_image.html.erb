<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel" style="display: flex; justify-content: center;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img class="img-responsive center-block" src=<%="PLACEHOLDER PHOTO @boat.photo" %> alt=<%"PLACEHOLDER TITLE @boat.title" %>>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span><i class="glyphicon glyphicon-chevron-left fas fa-chevron-left"></i></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span><i class=" glyphicon glyphicon-chevron-right fas fa-chevron-right"></i></span>
    <span class="sr-only">Next</span>
  </a>
</div>
