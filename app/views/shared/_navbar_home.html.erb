<div class="<%= controller_name == 'pages' && action_name == 'home' ? 'Navbar--transparent js-navbar-nav' : 'Navbar' %>" >
  <div class="Navbar__inner container-fluid">

    <!-- Logo -->
    <div class="Navbar__flex">
      <% brand_classes = controller_name == 'pages' && action_name == 'home' ? 'Navbar__brand Navbar__brand--white js-navbar-brand' : 'Navbar__brand' %>
      <%= link_to root_path, class: brand_classes do %>
        <%= render 'shared/logo' %>
      <% end %>

      <!-- Search -->
      <%= render 'shared/search_input' %>
    </div>

    <!-- Right Navigation -->
    <div class="Navbar__flex hidden-xs hidden-sm links-home">

       <div class="Navbar__link-item">
        <h6><%= link_to "Explore", spots_path, :class => current_class?(spots_path)  %></h6>
       </div>
       <div class="Navbar__link-item">
        <h6><%= link_to "Challenges", events_path, :class => current_class?(events_path)  %></h6>
       </div>

      <% if user_signed_in? %>

        <!-- Links when logged in -->

        <div class="Navbar__link-item">
          <h6><%= link_to "favorites", favorites_path, :class => current_class?(favorites_path) %></h6>
        </div>
        <div class="Navbar__link-item">
          <h6><%= link_to "Profile", profile_path(current_user), :class => current_class?(profile_path(current_user)) %></h6>
        </div>

        <!-- TODO: add message system later -->
        <%#= link_to "Messages", conversations_path, class: "Navbar__link-item" %>

        <div class="Navbar__link-item">
          <h6><%= link_to t(".add_new_spot", default: "Add new spot"), new_spot_path, :class => current_class?(new_spot_path) %></h6>
        </div>

        <!-- <div class="dropdown Navbar__link-item">
          <a href="#" class="Navbar__dropdown dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="false"><h6>Add</h6></a>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><%= link_to t(".add_a_new_spot", default: "Add a new spot"), new_spot_path, :class => current_class?(new_spot_path) %></li>

              <li><%#= link_to t(".add_a_new_event", default: "Add a new challenge"), new_event_path, :class => current_class?(new_event_path) %></li>
            </ul>
        </div> -->

        <!-- Avatar with dropdown menu -->
        <div class="dropdown Navbar__link-item">
          <% if current_user.photo.present? %>
            <%= cl_image_tag(current_user.photo.url, gravity: 'face', width: 40, height: 40, crop: "fill", class: "Navbar__avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown") %>
          <% else %>
            <div class="Navbar__avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
              <i class="fas fa-user-circle Navbar__user-icon"></i>
            </div>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to dashboard_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>

        <!-- Login link (when logged out) -->
        <div class="dropdown Navbar__link-item">
          <a href="#" class="Navbar__dropdown dropdown-toggle Navbar__help" role="button" data-toggle="dropdown" aria-expanded="false">Help</a>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><a href="#">FAQ</a></li>
              <li><a href="#">Customer support</a></li>
            </ul>
        </div>
        <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "btn btn-primary" %>
      <% end %>
    </div>

    <!-- Dropdown list appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Some mobile link</a></li>
          <li><a href="#">Other one</a></li>
          <li><a href="#">Other one</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
