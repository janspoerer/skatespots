<section class="Banner">
  <div class="Banner__inner container">
    <div class="Banner__content">
      <h1 class="Banner__heading">Are you ready for the next skate adventure?</h1>
      <p class="Banner__leading">Find the perfect spot to skate.</p>
      <%= form_tag('/spots', method: "get", class: "Banner__form") do %>
        <div class="input-group input-group-lg">
          <%= text_field_tag(:query, nil, placeholder: "Where do you want to skate?", class: "Input Banner__input form-control") %>
          <div class="input-group-btn">
            <%= button_tag :submit, class: "btn btn-primary btn-lg" do %>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
